import java.util.Scanner;

public class ExecutionFile {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Enter n: ");
        int n = scanner.nextInt();

       for(int i=n;i>0;i--){
           for(int j=0; j<i; j++){
               System.out.print((i+j)%2 + " ");
           }System.out.println();
       }
    }
}
